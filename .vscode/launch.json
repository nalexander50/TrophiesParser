    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main (no args)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Python: Main (input arg)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "args": [
                "${workspaceRoot}/input.txt"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Python: Main (input + output args)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/main.py",
            "args": [
                "${workspaceRoot}/input.txt",
                "${workspaceRoot}/output.csv"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}